<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>

        <shape android:shape="oval">
            <padding
                android:bottom="@dimen/_3sdp"
                android:left="@dimen/_3sdp"
                android:right="@dimen/_3sdp"
                android:top="@dimen/_3sdp" />
            <size
                android:width="@dimen/_20sdp"
                android:height="@dimen/_20sdp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item>

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/btn_color1"
                android:endColor="@color/btn_color2"/>

            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"/>


        </shape>
    </item>

</layer-list>