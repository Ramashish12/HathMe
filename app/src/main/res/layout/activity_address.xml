    <include
        android:id="@+id/header"
        layout="@layout/inflate_header" />
    <TextView
        android:id="@+id/tvCurrentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llBottom"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangular_border_less_radius"
        android:drawablePadding="@dimen/_5sdp"
        android:padding="@dimen/_8sdp"
        android:text="@string/useCurrentLocation"
        android:textColor="@color/redDark"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ic_gps"
        app:drawableTint="@color/redDark" />

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/btn_rectangular_white"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_map_marker_double"
                app:tint="@color/redDark" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_toStartOf="@+id/tvChange"
                android:layout_toEndOf="@+id/ivLocation"
                android:fontFamily="@font/fira_sans_medium"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvSubAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAddress"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_toStartOf="@+id/tvChange"
                android:layout_toEndOf="@+id/ivLocation"
                android:fontFamily="@font/fira_sans_regular"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tvChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/fira_sans_medium"
                android:text="@string/change"
                android:textColor="@color/redDark"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvEnterAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/btn_rectangular_less_radius"
            android:fontFamily="@font/fira_sans_sem_bold"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/enterCompleteAddress"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>

</RelativeLayout>