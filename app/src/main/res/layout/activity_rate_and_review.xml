<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="code.activity.RateAndReviewActivity">
    <include
        android:id="@+id/header"
        layout="@layout/inflate_header" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvDriverDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_medium"
                android:text="@string/driverDetails"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_13sdp" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cvDeliveryBoy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDriverDetails"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                tools:ignore="SpUsage">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivImage"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_user_default"
                            app:riv_corner_radius="@dimen/_10sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/ivImage"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvDeliveryBoyName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/fira_sans_medium"
                                android:text="@string/storeName"
                                android:textColor="@color/textBlack"
                                android:textSize="@dimen/_13sdp" />
                            <TextView
                                android:id="@+id/tvDeliveryBoyNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/fira_sans_medium"
                                android:text="@string/storeName"
                                android:textColor="@color/textBlack"
                                android:textSize="@dimen/_11sdp" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:progressTint="@color/golden"
                                    android:rating="3" />
                                <TextView
                                    android:id="@+id/tvRateNow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:fontFamily="@font/fira_sans_regular"
                                    android:text="@string/rateNow"
                                    android:textColor="@color/blue"
                                    android:layout_alignParentEnd="true"
                                    android:textSize="@dimen/_11sdp"
                                    android:visibility="gone" />
                            </RelativeLayout>


                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tvProductList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_medium"
                android:text="@string/orderProductList"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/cvDeliveryBoy"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_13sdp" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProductList"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/rvList"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>