<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangular_top_radius"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/fira_sans_sem_bold"
            android:text="@string/create_group"
            android:textAlignment="center"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_18sdp"
            tools:ignore="SpUsage" />
        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:fontFamily="@font/fira_sans_regular"
            android:text="@string/group_name"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_13sdp"
            tools:ignore="SpUsage" />
        <LinearLayout
            android:id="@+id/llMobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_below="@+id/tvTitle1"
            android:background="@drawable/et_rectangular_border"
            >

            <EditText
                android:id="@+id/etGroupName"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_10sdp"
                android:fontFamily="@font/fira_sans_regular"
                android:inputType="text"
                android:hint="@string/enter_group_name"
                android:background="@null"
                 />

        </LinearLayout>
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_15sdp"
            app:tint="@color/black" />

    </RelativeLayout>


