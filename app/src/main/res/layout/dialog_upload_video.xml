<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangular_top_radius"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/fira_sans_sem_bold"
            android:text="@string/upload"
            android:textAlignment="center"
            android:visibility="gone"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_18sdp"
            tools:ignore="SpUsage" />
        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:fontFamily="@font/fira_sans_regular"
            android:text="@string/description"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_13sdp"
            tools:ignore="SpUsage" />
            <EditText
                android:id="@+id/etDesc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/et_rectangular_border"
                android:fontFamily="@font/fira_sans_regular"
                android:hint="@string/description"
                android:layout_below="@+id/tvTitle1"
                android:inputType="textCapSentences"
                android:gravity="start"
                android:maxLines="1"
                android:padding="@dimen/_8sdp" />
        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etDesc"
            android:fontFamily="@font/fira_sans_regular"
            android:text="@string/hashTag"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_13sdp"
            tools:ignore="SpUsage" />
        <EditText
            android:id="@+id/etHashTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/et_rectangular_border"
            android:fontFamily="@font/fira_sans_regular"
            android:hint="@string/hashTag"
            android:layout_below="@+id/tvTitle2"
            android:inputType="textCapSentences"
            android:maxLength="150"
            android:maxLines="1"
            android:padding="@dimen/_8sdp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tvContinue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/btn_rectangular"
        android:gravity="center"
        android:padding="@dimen/_13sdp"
        android:text="@string/continuee"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />

</LinearLayout>