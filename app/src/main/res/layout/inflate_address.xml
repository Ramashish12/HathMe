<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    tools:ignore="SpUsage"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAddressType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/textBlack"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/fira_sans_medium" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_toStartOf="@+id/ivDelete"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:src="@mipmap/edit_address"
            app:tint="@color/redDark" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete"
            app:tint="@color/colorPrimary" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/textBlack"
        android:fontFamily="@font/fira_sans_regular" />

    <TextView
        android:id="@+id/tvSetDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setAsDefault"
        android:textSize="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/fira_sans_regular" />

</LinearLayout>