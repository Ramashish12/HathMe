<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:ignore="SpUsage">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/ivMark"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_mark"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/ivMark"
            android:fontFamily="@font/fira_sans_medium"
            android:text="@string/palakPaneer"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_13sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/lnQtyPrice"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_toStartOf="@+id/tvAmount"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/fira_sans_sem_bold"
                android:text="1"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_13sdp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_toEndOf="@+id/tvQuantity"
                android:fontFamily="@font/fira_sans_medium"
                android:text="x"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvEachItemAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_toStartOf="@+id/tvx"
                android:fontFamily="@font/fira_sans_sem_bold"
                android:text="10"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_13sdp"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/fira_sans_medium"
            android:text="120"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_13sdp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/rlTop"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/bg_grey" />
</RelativeLayout>