<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:ignore="SpUsage">

    <ImageView
        android:id="@+id/ivCallType"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_call_outgoing" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_centerVertical="true"
        app:civ_border_color="@color/gray"
        app:civ_border_width="1dp"
        android:visibility="gone"
        android:src="@drawable/noimagefound"
        android:elevation="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@+id/ivCallType" />
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/ivCallType"
         android:id="@+id/lnDuration"
         android:layout_toLeftOf="@+id/tvDuration"
         android:orientation="vertical">
         <TextView
             android:id="@+id/tvName"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_10sdp"
             android:singleLine="true"
             android:fontFamily="@font/fira_sans_medium"
             android:text="@string/app_name"
             android:textColor="@color/textBlack"
             android:textSize="@dimen/_11sdp" />


         <TextView
             android:id="@+id/tvDateTime"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_10sdp"
             android:fontFamily="@font/fira_sans_regular"
             android:text="@string/app_name"
             android:singleLine="true"
             android:textColor="@color/textBlack"
             android:textSize="@dimen/_10sdp" />
     </LinearLayout>
    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:fontFamily="@font/fira_sans_regular"
        android:text="@string/app_name"
        android:textColor="@color/textBlack"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/_10sdp" />


</RelativeLayout>