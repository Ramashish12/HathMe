<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_back" />
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/lnTools"
        android:textSize="@dimen/_11sdp"
        android:layout_centerVertical="true"
        android:text=""
        android:singleLine="true"
        android:textColor="@color/textBlack"
        android:layout_toEndOf="@+id/ivBack"
        android:layout_marginEnd="@dimen/_2sdp"
        android:fontFamily="@font/fira_sans_sem_bold"
        tools:ignore="SpUsage" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/lnTools"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivInvitations"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/invitations"
            app:tint="@color/redDark" />
        <ImageView
            android:id="@+id/ivGroupAudioCall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="@dimen/_3sdp"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/ic_call" />
        <ImageView
            android:id="@+id/ivGroupVideoCall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="@dimen/_1sdp"
            android:visibility="gone"
            android:src="@drawable/ic_videocam"
            app:tint="@color/redDark" />
        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="@dimen/_1sdp"
            android:src="@drawable/ic_menus"
            app:tint="@color/redDark" />
    </LinearLayout>

</RelativeLayout>