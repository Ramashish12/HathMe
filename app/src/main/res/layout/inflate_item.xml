<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lnMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_margin="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/ivImage"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_85sdp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/dummy_image" />

                    <RelativeLayout
                        android:id="@+id/rlAdd"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/btn_rectangular_green"
                        android:backgroundTint="@color/colorPrimary"
                        android:paddingBottom="@dimen/_5sdp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivMinus"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_minus"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="@dimen/_21sdp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_toStartOf="@+id/ivPlus"
                            android:layout_toEndOf="@+id/ivMinus"
                            android:fontFamily="@font/fira_sans_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                        <ImageView
                            android:id="@+id/ivPlus"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_plus"
                            app:tint="@color/black" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tvAdd"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/btn_rectangular_green"
                        android:backgroundTint="@color/colorPrimary"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/fira_sans_medium"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/add"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:visibility="visible" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_medium"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fira_sans_regular"
                            android:text="@string/app_name"
                            android:textColor="@color/textGrey"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tvSellingPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/fira_sans_regular"
                            android:text="@string/app_name"
                            android:textColor="@color/textGrey"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/fira_sans_regular"
                        android:maxLines="3"
                        android:text="@string/app_name"
                        android:textColor="@color/textGrey"
                        android:textSize="@dimen/_11sdp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:progressTint="@color/golden" />
                        <TextView
                            android:id="@+id/tvRatingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/fira_sans_regular"
                            android:maxLines="1"
                            android:text="2"
                            android:layout_toEndOf="@+id/ratingBar"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>



                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlOutOfStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnMain"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/transparent1"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvSoldOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/fira_sans_sem_bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:text="@string/outOfStock"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/bg_grey" />

</LinearLayout>