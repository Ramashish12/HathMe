<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="SpUsage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_85sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/dummy_image" />

            <RelativeLayout
                android:id="@+id/rlAdd"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_rectangular_green"
                android:backgroundTint="@color/colorPrimary"
                android:paddingBottom="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/ivMinus"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_minus"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@+id/ivPlus"
                    android:layout_toEndOf="@+id/ivMinus"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/fira_sans_regular" />

                <ImageView
                    android:id="@+id/ivPlus"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_plus"
                    app:tint="@color/black" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/btn_rectangular_green"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="@dimen/_5sdp"
                android:fontFamily="@font/fira_sans_medium"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/add"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/fira_sans_medium" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/textGrey"
                android:fontFamily="@font/fira_sans_regular" />
            <TextView
                android:id="@+id/tvMerchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/_13sdp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:fontFamily="@font/fira_sans_medium" />
            <TextView
                android:id="@+id/tvMerchantAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/fira_sans_regular" />
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/textGrey"
                android:fontFamily="@font/fira_sans_regular" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/bg_grey" />

</LinearLayout>