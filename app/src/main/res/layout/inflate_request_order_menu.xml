<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_10sdp">
        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sugar"
            android:singleLine="true"
            android:layout_toStartOf="@+id/lnPriceRemove"
            android:scrollbarSize="@dimen/_13sdp"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/fira_sans_medium" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/lnPriceRemove"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹50"
                android:layout_marginEnd="@dimen/_5sdp"
                android:scrollbarSize="@dimen/_12sdp"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/fira_sans_regular" />
            <CheckBox
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:buttonTint="@color/colorPrimary"
                android:visibility="gone"
                android:clickable="false"
                android:id="@+id/checkAll"/>
            <ImageView
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:id="@+id/ivRemove"
                android:visibility="visible"
                android:layout_gravity="center"
                android:src="@drawable/ic_close"
                app:tint="@color/redDark" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scrollbarSize="@dimen/_11sdp"
            android:textColor="@color/textBlack"
            android:fontFamily="@font/fira_sans_regular" />

        <TextView
            android:id="@+id/tvX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:visibility="gone"
            android:layout_toEndOf="@+id/tvQuantity"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:scrollbarSize="@dimen/_11sdp"
            android:textColor="@color/textBlack"
            android:fontFamily="@font/fira_sans_regular" />

        <TextView
            android:id="@+id/tvItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tvX"
            android:fontFamily="@font/fira_sans_regular"
            android:scrollbarSize="@dimen/_11sdp"
            android:text="₹50"
            android:visibility="gone"
            android:textColor="@color/textBlack" />



    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/textGrey"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"/>
</LinearLayout>